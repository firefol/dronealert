    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topMarginView"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <TextView
        android:id="@+id/nameView"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorAccent"/>
</LinearLayout>